<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="browseButton" Content="Browse" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="browseButton_Click"/>
        <TextBox x:Name="fileTextBox" Height="23" Margin="10,37,10,0" TextWrapping="Wrap" Text="" ToolTip="File Path" VerticalAlignment="Top" TextChanged="fileTextBox_TextChanged" />
        <Button x:Name="encryptButton" Content="Encrypt" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="encryptButton_Click"/>
        <Button x:Name="decryptBtton" Content="Decrypt" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" Width="75" Click="decryptBtton_Click"/> 
        <PasswordBox x:Name="passwordBox1" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Width="235"   PasswordChanged="passwordBox1_PasswordChanged"/>
        <PasswordBox x:Name="passwordBox2" HorizontalAlignment="Left" Margin="10,117,0,0" VerticalAlignment="Top" Width="235"   PasswordChanged="passwordBox2_PasswordChanged"/> 
        <Label x:Name="pass1Label" Content="" HorizontalAlignment="Left" Margin="250,86,0,0" VerticalAlignment="Top" Width="257" Foreground="Red"/>
        <Label x:Name="pass2Label" Content="" HorizontalAlignment="Left" Margin="250,112,0,0" VerticalAlignment="Top" Width="257" Foreground="Red"/>
        <Button x:Name="encryptFileButton" Content="Encrypt File" HorizontalAlignment="Left" Margin="321,10,0,0" VerticalAlignment="Top" Width="88" Click="encryptFileButton_Click"/>
    </Grid>
</Window>
