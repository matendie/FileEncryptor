<Window x:Class="WpfClient.DecryptionPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="DecryptionPassword" Height="133.622" Width="300">
    <Grid>
        <TextBlock FontSize="12"  TextWrapping="WrapWithOverflow"  
                   Text="Please enter valid password to decrypt the file."
                   Margin="10,5,10,75" />
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Width="193" PasswordChanged="passwordBox_PasswordChanged" />
        <Button x:Name="decrypt_button" Content="Decrypt" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Click="decrypt_button_Click" Margin="207,72,0,0"/>
    </Grid>
</Window>
